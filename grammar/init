// sdrawkcab grammar in McKeeman Form extended with comments

Module
    sn0
    Expressions

Expressions
    sn0 Expression sn0
    sn0 Expression sn0 n Expressions

// i.e. a line, trimmed of whitespace
// todo: can be multiple lines actually
Expression
    PrimitiveTypeExpressions
    ComplexTypeExpression
    VariableTypeExpression

PrimitiveTypeExpressions
    StringTypeExpression
    NumberTypeExpression
    BooleanTypeExpression
    NoneTypeExpression

StringTypeExpression
    String

NumberTypeExpression
    Number

BooleanTypeExpression
    Boolean

NoneTypeExpression
    None

ComplexTypeExpression
    ObjectTypeExpression
    FunctionTypeExpression

ObjectTypeExpression
    ObjectDeclaration
    ObjectDeclarationInline

FunctionTypeExpression
    FunctionDeclaration

VariableTypeExpression
    Identifier
    ObjectProperty
    VariableDeclaration
    VariableAssignment
    FunctionCall
    Block
    IfElse
    Group
    Operations

Group
    "(" Expressions ")"